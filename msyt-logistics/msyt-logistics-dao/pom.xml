<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>msyt-logistics</artifactId>
        <groupId>cc.msonion.carambola</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>msyt-logistics-dao</artifactId>
    <description>洋葱小姐（Ms.Onion）, 洋桃供应链，msyt-system-dao，系统DAO模块</description>

    <!-- 依赖 -->
    <dependencies>

        <!-- msyt-parent-dao -->
        <dependency>
            <groupId>cc.msonion.carambola</groupId>
            <artifactId>msyt-parent-dao</artifactId>
        </dependency>

        <!-- msyt-system-pojo，由于已经依赖 msyt-system-common，因此就不要再直接依赖，msyt-system-common -->
        <dependency>
            <groupId>cc.msonion.carambola</groupId>
            <artifactId>msyt-logistics-pojo</artifactId>
        </dependency>

        <!-- 单元测试，由于是 scope：test ，因此每一个地方都需要依赖 -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <!-- 如果不添加此节点mybatis的mapper.xml文件都会被漏掉。 -->
    <!-- 不需要包含 *.java 文件，因为是默认已经包含 *.java -->
    <build>

        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>

</project>